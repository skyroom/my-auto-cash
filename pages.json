{
    "pages" : [
        // pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path" : "pages/index/index",
            "style": {
            	"navigationStyle": "custom",
            	"app-plus": {
            		"titleNView": false
            	}
            }
        },
		{
			"path": "pages/choose/choose",
			"style": {
				"navigationBarTitleText": "用户选择"
			}
		},
		{
			"path": "pages/cart/cart",
			"style": {
				"navigationBarTitleText": "商品列表"
			}
		},
		{
			"path": "pages/payType/payType",
			"style": {
				"navigationBarTitleText": "支付类型"
			}
		},
		{
			"path": "pages/payResult/payResult",
			"style": {
				"navigationBarTitleText": "支付结果"
			}
		}
    ],
    "globalStyle": {
    	"backgroundColor": "#F8F8F8",
    	"navigationBarBackgroundColor": "#5eaf31"
    },
	"condition" : { //模式配置，仅开发期间生效
		"current": 1, //当前激活的模式(list 的索引项)
		"list": [
			{
				"name": "payResult", //模式名称
				"path": "pages/payResult/payResult", //启动页面，必选
				"query": "" //启动参数，在页面的onLoad函数里面得到
			},
			{
				"name": "cart", //模式名称
				"path": "pages/cart/cart", //启动页面，必选
				"query": "" //启动参数，在页面的onLoad函数里面得到
			}
		]
	}
}
